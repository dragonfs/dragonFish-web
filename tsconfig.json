{
  "compileOnSave": true,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module":"esnext",
    "baseUrl": ".",
    "lib": ["dom", "es2015", "es2016"],
    "allowJs": true,
    // "checkJs": true,
    "declaration": true,
    "declarationDir": "./d",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "target":"es6",
    "jsx": "react",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipDefaultLibCheck": true,
    "version": true,
    "outDir": "./compile",
    "paths": {
      "src/*": ["src/*"],
    },
  },
  
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
