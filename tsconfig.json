{
  "compileOnSave": true,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module":"esnext",
    "lib": ["dom", "es2015", "es2016"],
    "allowJs": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "target":"es6",
    "jsx": "react",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipDefaultLibCheck": true,
    "version": true,
    "outDir": "./dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
